<div>
<%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
    <div> 
        <%= "show" %>
    </div>
    <% end %>
</div>

<div>
    <p>
      <%= @post.title %>
    </p>
    <%= link_to "by" + @post.user.name, root_path %>
      <div>
        <%= link_to "編集する", edit_post_path(@post) %>
        <%= link_to "削除する", post_path(@post), method: :delete %>
      </div>
    
      <div>
        <p>タイトル</p>
        <p>
          <%= @post.title %>
        </p>
      </div>
      <% if @post.image == nil? %>
        <div>
        <%= image_tag @post.image %>
        </div>
      <% end %>
        <div>
          <p>内容</p>
          <p>
            <%= @post.content %>
          </p>
        </div>
