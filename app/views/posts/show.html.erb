<div>

  
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <%= link_to "by" + @post.user.name, user_path(current_user.id) %>
      <div>
        <%= link_to "編集する", edit_post_path(@post) %>
        <%= link_to "削除する", post_path(@post), method: :delete %>
      </div><br>
  <% end %>
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <% if @post.image? %>  <!-- アップロード画像がある場合に実行する -->
        <img class="card-img-top">
        <strong>画像</strong><br>
        <%= image_tag @post.image.url %>
      <% end %>
      <div class="card-body">
        <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
        <p class="card-text"><%= @post.title %></p>
        <p class="card-text"> <%= @post.content %></p>
        <%= link_to "by " + @post.user.name, user_path(@post.user) %>
        <ul>
            <% @post.tags.each do |tag| %>
              <li><%= tag.name %></li>
            <% end %>
          </ul>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->
            <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
          </div>
          <!-- <small class="text-muted">9 mins</small> -->
          <small class="text-muted">9分</small>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: "likes/like" %>


        <h3>コメント一覧</h3>
        <% @comments.each do |comment| %>
          <%= comment.comment_content %><br>
          <% if user_signed_in? %>  
            <% if current_user.id == comment.user_id %>  
              <button><%= link_to "編集", edit_post_comment_path(@post) %></button>
              <button><%= link_to "削除", post_comment_path(@post), method: :delete %></button>
            <% end %> <br>
          <% end %>  
        <% end %> 
        <% if user_signed_in? %>
          <%= form_with model: [@post, @comment] do |f| %>
            <%= f.text_area :comment_content, placeholder: "コメントする" %><br>
            <%= f.label :status, '公開/非公開' %><br/>
            <%= f.label :status, :"公開" %>
            <%= f.radio_button :status, :open %>
            <%= f.label :status, :"非公開" %>
            <%= f.radio_button :status, :hidden %><br>
            <%= f.submit "SEND" %>
          <% end %>
        <% end %>
      
        <button><%= link_to "投稿一覧に戻る", root_path %></button>