<% if user_signed_in? %>
  <% if current_user == @user || current_user.admin? %>
    <h2>admin</h2>

      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <% if post.image? %>  <!-- アップロード画像がある場合に実行する -->
            <img class="card-img-top">
            <strong>画像</strong><br>
            <%= image_tag post.image.url %>
          <% end %>
          <div class="card-body">
            <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
            <p class="card-text"><%= post.title %></p>
            <p class="card-text"> <%= post.content %></p>
            <%= "by " + post.user.name %>
            <ul>
                <% post.tags.each do |tag| %>
                  <li><%= tag.name %></li>
                <% end %>
              </ul>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "編集", edit_admin_post_path(post.id) %></button>
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
              </div>
              <!-- <small class="text-muted">9 mins</small> -->
              <small class="text-muted">9分</small>
            </div>
          </div>
        </div>
      </div>

  <% else %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <% if post.image? %>  <!-- アップロード画像がある場合に実行する -->
          <img class="card-img-top">
          <strong>画像</strong><br>
          <%= image_tag post.image.url %>
        <% end %>
        <div class="card-body">
          <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
          <p class="card-text"><%= post.title %></p>
          <p class="card-text"> <%= post.content %></p>
          <%= "by " + post.user.name %>
            <ul>
              <% post.tags.each do |tag| %>
                <li><%= tag.name %></li>
              <% end %>
            </ul>

            <h3>コメント一覧</h3>
            <% @comments.each do |c| %>
              <%= c.comment_content %><br>
              <% if user_signed_in? %>  
                <% if user.admin? %>  
                  <button><%= link_to "削除", post_comment_path(@post, c), method: :delete %></button>
                <% end %> <br>
              <% end %>  
            <% end %> 

          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "詳細", post_path(post.id) %></button>
              <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
            </div>
            <!-- <small class="text-muted">9 mins</small> -->
            <small class="text-muted">9分</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>

<% end %>