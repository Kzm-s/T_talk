<%= form_with model: @post, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>

  <div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %><br>
  </div>

  <div class="field">
    <%= f.label :post_type, '投稿の種類' %><br />
    <%= f.collection_radio_buttons :post_type, Post.post_types_i18n, :first , :last do |b|%>
      <%= b.label(class: "mr-5") { b.radio_button(class: "form-check-input") + b.text }%>
    <%end %>
  </div>

  <div class="field"><br>
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, placeholder:'タイトルを入力してください' %>
  </div>

  <div class="field"><br>
    <%= f.label :content, "本文" %><br />
    <%= f.text_area :content, placeholder:'投稿内容を入力してください'  %>
  </div>

  <div class="field"><br>
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field"><br>
    <%= f.label"公開範囲を選択" %><br>
    <%= f.collection_radio_buttons :status, Post.statuses_i18n, :first , :last do |b|%>
      <%= b.label(class: "mr-5") { b.radio_button(class: "form-check-input") + b.text }%>
    <%end %>
  </div>

  <div class="actions"><br>
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %><br>

<button><%= link_to "投稿一覧に戻る", root_path %></button>