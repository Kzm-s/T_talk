<div class="main">
    <div class="inner">
      <div class="user__wrapper">
        <h2 class="page-heading">
          <%= @user.name + "さんの情報" %>
          <%= render partial: "relationships/follow_list", user: @user %>

          <%= render partial: "relationships/follow_button", user: @user %>

          <% unless @user.id == current_user.id %>
            <% if @haveRoom == true %> 
              <%= link_to "ダイレクトメッセージ", room_path %>
            <% else %>
              <%= form_with model: @room, local: true do |f|%> 
                <%= fields_for @RoomUser do |r| %>
                  <%= r.hidden_field :user_id, value: @user.id %>
                <% end %>
                <%= f.submit "チャットを始める" %>
              <% end %>
            <% end %>
          <% end %>



        </h2>
        <table class="table">
          <tbody>
            <tr>
              <th class="table__col1">名前</th>
              <td class="table__col2"><%= @user.name %></td>
            </tr>
            <tr>
              <th class="table__col1">所属校</th>
              <td class="table__col2"><%= @user.affiliation %></td>
            </tr>
            <tr>
              <th class="table__col1">職名</th>
              <td class="table__col2"><%= @user.job_title %></td>
            </tr>
            <tr>
              <th class="table__col1">教員歴</th>
              <td class="table__col2"><%= @user.career %></td>
            </tr>
            <tr>
                <th class="table__col1">校務分掌</th>
                <td class="table__col2"><%= @user.responsible %></td>
              </tr>            <tr>
                <th class="table__col1">担当教科</th>
                <td class="table__col2"><%= @user.subject %></td>
              </tr>
              <tr>
                <th class="table__col1">担当学年</th>
                <td class="table__col2"><%= @user.grade %></td>
              </tr>
          </tbody>
        </table>


        <h2 class="page-heading">
          <%= @user.name + "さんの投稿"%>
        </h2>
        <div class="user__card">
          <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
          <%= render partial: "posts/post", collection: @user.posts %>
        </div>
      </div>
    </div>
  </div>