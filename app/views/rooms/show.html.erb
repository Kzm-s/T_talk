<div class="chat-room">
    <h1>メッセージ</h1>
    # ルーム内のユーザー表示部分
    <% @UserRooms.each do |room| %> 
    <div class="user-name">
    <strong>
        <a class="users-room-link" href="/users/<%= room.user.id %>">
          <%= room.user.name %>さん
        </a>
    </strong>
    </div>
    <% end %>
    #// ルーム内のユーザー表示部分
   
    <hr>
    <div class="chats">
    
      # メッセージ表示部分
      <div class="chat">
        <% if @messages.present? %>
          <% @messages.each do |message| %>
            <div class="chat-box">
              <div class="chat-text">
                <%= message.content %>
                <%= message.created_at.strftime("%Y-%m-%d %H:%M") %>
                <%= message.is_check %>
              </div>
            </div>
          <% end %>
        <%else%>
            <p>メッセージはまだありません</p>
        <% end %>
      </div>
      #// メッセージ表示部分
      
      # メッセージ投稿フォーム
      <div class="posts">
        <%= form_with model: @message, local: true do |f| %>
          <%= f.text_field :content, placeholder: "メッセージを入力してください" %><br>
          <%= f.file_field :image %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
      #// メッセージ投稿フォーム<br>
      <button><%= link_to "投稿一覧に戻る", root_path %></button>

      
    </div>
   </div>